<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mappers.UserInfoMapper" >

    <resultMap id="BaseResultMAp" type="com.cjb.Model.UserModel">
        <id column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="user_age" property="userAge" jdbcType="INTEGER"/>
        <result column="user_address" property="userAddress" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="columns">
      user_id,user_name,user_age,user_address
    </sql>
    <select id="queryByCondition"  parameterType="com.cjb.Model.UserModel" resultMap="BaseResultMAp">
      SELECT
        <include refid="columns"/>
        FROM user_info
        <where>
            1=1
            <if test="userName != null and userName != ''">
                and user_name like concat( '%', #{userName},'%')
            </if>
            <if test="userAge > 0">
                and user_age = #{userAge}
            </if>
            <if test="userAddress != null and userAddress != ''">
                and user_address like  concat( '%', #{userAddress},'%')
            </if>
        </where>
        <if test="from!=-1">
            LIMIT #{pageSize} OFFSET #{from}
        </if>
    </select>

    <select id="queryCountByCondition"  parameterType="com.cjb.Model.UserModel" resultType="int">
        SELECT
        count(user_id)
        FROM user_info
        <where>
            1=1
            <if test="userName != null and userName != ''">
                and user_name like  concat( '%', #{userName},'%')
            </if>
            <if test="userAge > 0">
                and user_age = #{userAge}
            </if>
            <if test="userAddress != null and userAddress != ''">
                and user_address like  concat( '%', #{userAddress},'%')
            </if>
        </where>
    </select>

    <insert id="saveData" parameterType="com.cjb.Model.UserModel">
        INSERT INTO "user_info" ("user_id", "user_name", "user_age", "user_address")
        VALUES (#{userId}, #{userName}, #{userAge}, #{userAddress});
    </insert>

    <delete id="deleteById" parameterType="int">
      delete from user_info WHERE user_id = #{userId};
    </delete>

    <delete id="batchDeleteData" parameterType="int">
        delete from user_info where user_id in
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <update id="updateData" parameterType="com.cjb.Model.UserModel">
      UPDATE user_info set user_name = #{userName},user_age = #{userAge} ,user_address = #{userAddress}
      WHERE user_id = #{userId};
    </update>

</mapper>
